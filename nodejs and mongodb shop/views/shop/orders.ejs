<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

        <%- include('../alerts/thanks.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>You have made no orders</h1>
            <% } else { %>
                <h1 class="order-header">List of your purchases:</h1>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <h1>Order Number: <%= order._id %></h1>
                            <ul class="orders__products">
                                <% order.products.forEach(p => { %>
                                    <li class="orders__products-item"><%= p.product.title %> (<%= p.quantity %>)</li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
                <h1 class="order-header"><em>Thank you</em> for your purchases!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>